@{
    ViewBag.Title = "Dashboard";
}

<div>
    <div>
        Welcome
    </div>
    <div class="product-list">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Categories</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["Products"] as IEnumerable<ProductPLPVM>)
                {
                    <tr  onclick="window.location='admin/product/@item.Id';">
                        <th scope="row">@item.Id</th>
                        <td><img src="@item.Images[0]" alt="" height="200px"></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            @foreach (var c in item.Categories as IEnumerable<CategoryVM>)
                            {
                                <p>@c.Title</p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
